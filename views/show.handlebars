<div class="container">
  <div class="d-flex flex-column justify-content-center">
    <div align="center" class="mx-auto">
      <label for="shortenURL">URL Shortener</label>
      <div style="font-size: 24px;">
        <i class="fas fa-link fa-10x"></i>
      </div>
    </div>

    {{#if address}}
    <div class="form-group mx-auto">

      <input type="text" value="{{{address}}}" class="form-control" id="URLCode">

    </div>
    {{/if}}

    <div align="center">
      <button class="btn btn-primary" onclick="myFunction()">Copy</button>
    </div>

  </div>

</div>

<script>
  function myFunction() {
    /* Get the text field */
    let copyText = document.getElementById("URLCode");

    /* Select the text field */
    copyText.select();
    copyText.setSelectionRange(0, 99999); /*For mobile devices*/

    /* Copy the text inside the text field */
    document.execCommand("copy");

    /* Alert the copied text */
    alert("Copied the text: " + copyText.value);
  }
</script>